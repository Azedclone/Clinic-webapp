<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>DashboardFilter</filter-name>
        <filter-class>filter.DashboardFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DashboardFilter</filter-name>
        <url-pattern>/dashboard</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotServlet</servlet-name>
        <servlet-class>controller.ForgotServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadData</servlet-name>
        <servlet-class>dal.LoadData</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadForm</servlet-name>
        <servlet-class>dal.LoadForm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageDoctor</servlet-name>
        <servlet-class>controller.ManageDoctor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagePatient</servlet-name>
        <servlet-class>controller.ManagePatient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageBlog</servlet-name>
        <servlet-class>controller.ManageBlog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageAppointment</servlet-name>
        <servlet-class>controller.ManageAppointment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotServlet</servlet-name>
        <url-pattern>/forgot</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadData</servlet-name>
        <url-pattern>/loadData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadForm</servlet-name>
        <url-pattern>/loadForm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageDoctor</servlet-name>
        <url-pattern>/manageDoctor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagePatient</servlet-name>
        <url-pattern>/managePatient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageBlog</servlet-name>
        <url-pattern>/manageBlog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageAppointment</servlet-name>
        <url-pattern>/manageAppointment</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
